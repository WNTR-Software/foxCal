    "host": "foxcal.example.com",
    "basePath": "/",
    "paths": {
        "/sampleKv": {
            "post": {
                "description": "create or update key-value pair",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Create or update a key-value pair",
                "operationId": "create-or-update-kv",
                "parameters": [
                    {
                        "description": "Key value data",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/web.KV"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "No response body",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "RFC9457 problem details",
                        "schema": {
                            "$ref": "#/definitions/web.Rfc9457Placeholder"
                        }
                    }
                }
            }
        },
        "/sampleKv/{id}": {
            "get": {
                "description": "get value of key",
                "produces": [
                    "application/json"
                ],
                "summary": "Get the value for a key",
                "operationId": "get-kv-value",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Key to get",
                        "name": "key",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The key value pair found",
                        "schema": {
                            "$ref": "#/definitions/web.KV"
                        }
                    },
                    "404": {
                        "description": "No key-value pair found",
                        "schema": {
                            "$ref": "#/definitions/web.Rfc9457Placeholder"
                        }
                    },
                    "500": {
                        "description": "RFC9457 problem details",
                        "schema": {
                            "$ref": "#/definitions/web.Rfc9457Placeholder"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "web.KV": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            }
        },
        "web.Rfc9457Placeholder": {
            "type": "object",
            "properties": {
                "reference": {
                    "type": "string"
                },
                "status": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            }
        }
    }
